@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "GetBlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Blog List</h4>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th> # </th>
                        <th>Blog Başlığı</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Kategori</th>
                        <th>Durum</th>
                        <th>Sil</th>
                        <th>Düzenle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="py-1">@item.BlogId </td>
                            <td> <b> @item.Title </b>  </td>
                            <td> @(((DateTime)item.CreateDate).ToString("dd MMMM yyyy"))</td>
                            <td> @item.Category.Name</td>
                            <td> @item.Status </td>
                            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="#" class="btn btn-outline-warning">Güncelle</a></td>
                        </tr>
                    }

                </tbody>
            </table>
            <br /> <br />
            <a href="#" class="btn btn-success"> <h6> Yeni Blog Oluştur </h6> </a>
        </div>
    </div>
</div>
